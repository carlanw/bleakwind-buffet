<UserControl x:Class="PointOfSale.Items.Entrees.GardenOrcOmelettePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Items.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel Margin="10">
        <CheckBox Name="Broccoli" Margin="10" IsChecked="True">
            Broccoli
        </CheckBox>
        <CheckBox Name="Mushrooms" Margin="10" IsChecked="True">
            Mushrooms
        </CheckBox>
        <CheckBox Name="Tomato" Margin="10" IsChecked="True">
            Tomato
        </CheckBox>
        <CheckBox Name="Cheddar" Margin="10" IsChecked="True">
            Cheddar
        </CheckBox>
        <Button Name="AddToOrderButton" TextBlock.FontWeight="Bold" TextBlock.FontSize="16" HorizontalAlignment="Right" Margin="10" Click="AddToOrderButton_Click">
            Add to Order
        </Button>
    </StackPanel>
</UserControl>
