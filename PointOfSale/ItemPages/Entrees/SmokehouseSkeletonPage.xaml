<UserControl x:Class="PointOfSale.Items.Entrees.SmokehouseSkeletonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Items.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel Margin="10">
        <CheckBox Name="SausageLink" Margin="10" IsChecked="True">
            Sausage Link
        </CheckBox>
        <CheckBox Name="Egg" Margin="10" IsChecked="True">
            Egg
        </CheckBox>
        <CheckBox Name="HashBrowns" Margin="10" IsChecked="True">
            Hash Browns
        </CheckBox>
        <CheckBox Name="Pancake" Margin="10" IsChecked="True">
            Pancake
        </CheckBox>
        <Button Name="AddToOrderButton" TextBlock.FontWeight="Bold" TextBlock.FontSize="16" HorizontalAlignment="Right" Margin="10" Click="AddToOrderButton_Click">
            Add to Order
        </Button>
    </StackPanel>
</UserControl>
