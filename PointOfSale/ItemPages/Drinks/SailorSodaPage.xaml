<UserControl x:Class="PointOfSale.ItemPages.Drinks.SailorSodaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ItemPages.Drinks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <Label>--Size--</Label>
        <RadioButton Name="Small" GroupName="Size" Margin="2" IsChecked="True">Small</RadioButton>
        <RadioButton Name="Medium" GroupName="Size" Margin="2">Medium</RadioButton>
        <RadioButton Name="Large" GroupName="Size" Margin="2">Large</RadioButton>
        <Label>--Flavor--</Label>
        <RadioButton Name="Blackberry" GroupName="Flavor" Margin="2">Blackberry</RadioButton>
        <RadioButton Name="Cherry" GroupName="Flavor" Margin="2" IsChecked="True">Cherry</RadioButton>
        <RadioButton Name="Grapefruit" GroupName="Flavor" Margin="2">Grapefruit</RadioButton>
        <RadioButton Name="Lemon" GroupName="Flavor" Margin="2">Lemon</RadioButton>
        <RadioButton Name="Peach" GroupName="Flavor" Margin="2">Peach</RadioButton>
        <RadioButton Name="Watermelon" GroupName="Flavor" Margin="2">Watermelon</RadioButton>
        <CheckBox Name="Ice" Margin="10" IsChecked="True">
            Ice
        </CheckBox>
        <Button Name="AddToOrderButton" TextBlock.FontWeight="Bold" TextBlock.FontSize="16" HorizontalAlignment="Right" Margin="10" Click="AddToOrderButton_Click">
            Add to Order
        </Button>
    </StackPanel>
</UserControl>
